{
    "$schema": "http://schema.management.azure.com/schemas/2014-04-01-preview/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "visionApi": {
            "type": "object"
        },
        "omsSettings":{
            "type": "object"
        },
        "solutionType":{
            "type": "string"
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.CognitiveServices/accounts",
            "sku": {
                "name": "[parameters('visionApi').freeVisionApiPricingTier]"
            },
            "kind": "ComputerVision",
            "name": "[parameters('visionApi').freeVisionApiName]",
            "apiVersion": "2016-02-01-preview",
            "location": "[parameters('visionApi').location]",
            "tags": {
                "IotSuiteType": "[parameters('solutionType')]"
            },
            "properties": {},
            "resources": [
                {
                    "name": "Microsoft.Insights/service",
                    "type": "providers/diagnosticSettings",
                    "apiVersion": "2015-07-01",
                    "dependsOn": [
                        "[concat('Microsoft.CognitiveServices/accounts/', parameters('visionApi').freeVisionApiName)]"
                    ],
                    "properties": {
                        "workspaceId": "[resourceId('Microsoft.OperationalInsights/workspaces/', parameters('omsSettings').omsWorkspaceName)]",
                        "logs": [
                            {
                                "category": "Audit",
                                "enabled": true,
                                "retentionPolicy": {
                                    "days": 0,
                                    "enabled": false
                                }
                            }
                        ],
                        "metrics": [
                            {
                                "timeGrain": "AllMetrics",
                                "category": "AllMetrics",
                                "enabled": true,
                                "retentionPolicy": {
                                    "enabled": false,
                                    "days": 0
                                }
                            }
                        ]
                    }
                }
            ]
        },
        {
            "type": "Microsoft.CognitiveServices/accounts",
            "sku": {
                "name": "[parameters('visionApi').standardVisionApiPricingTier]"
            },
            "kind": "ComputerVision",
            "name": "[parameters('visionApi').standardVisionApiName]",
            "apiVersion": "2016-02-01-preview",
            "location": "[parameters('visionApi').location]",
            "tags": {
                "IotSuiteType": "[parameters('solutionType')]"
            },
            "properties": {},
            "resources": [
                {
                    "name": "Microsoft.Insights/service",
                    "type": "providers/diagnosticSettings",
                    "apiVersion": "2015-07-01",
                    "dependsOn": [
                        "[concat('Microsoft.CognitiveServices/accounts/', parameters('visionApi').standardVisionApiName)]"
                    ],
                    "properties": {
                        "workspaceId": "[resourceId('Microsoft.OperationalInsights/workspaces/', parameters('omsSettings').omsWorkspaceName)]",
                        "logs": [
                            {
                                "category": "Audit",
                                "enabled": true,
                                "retentionPolicy": {
                                    "days": 0,
                                    "enabled": false
                                }
                            }
                        ],
                        "metrics": [
                            {
                                "timeGrain": "AllMetrics",
                                "category": "AllMetrics",
                                "enabled": true,
                                "retentionPolicy": {
                                    "enabled": false,
                                    "days": 0
                                }
                            }
                        ]
                    }
                }
            ]
        }
    ]
}
